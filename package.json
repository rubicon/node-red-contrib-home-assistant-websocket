    "type": "git",
    "url": "https://github.com/zachowj/node-red-contrib-home-assistant-websocket"
  },
  "license": "MIT",
  "keywords": [
    "node-red",
    "home-assistant",
    "home assistant",
    "home automation",
    "websocket"
  ],
  "node-red": {
    "nodes": {
      "all": "dist/index.js"
    }
  },
