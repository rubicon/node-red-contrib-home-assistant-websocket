  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint -c .eslintrc.js --fix",
      "git add"
    ],
    "*.{css,html,json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "files": [
    "dist/**/*",
    "examples/"
  ]
}
