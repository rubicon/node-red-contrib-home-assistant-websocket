    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:lint": "prettier --write docs/{.vuepress/**,**}/*.{js,md,html}",
    "lint": "eslint . && prettier --check {docs,src,test,ui}/**/*.{css,js,md,html}",
